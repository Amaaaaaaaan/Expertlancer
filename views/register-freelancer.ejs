    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const errorMessageElement = document.getElementById('error-message');

            // Display server-side errors if available
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            if (error) {
                errorMessageElement.textContent = error;
                errorMessageElement.classList.remove('hidden');
            }

            // Skills functionality
            const skillsInput = document.getElementById('skills-input');
            const skillsContainer = document.getElementById('skills-container');
            const skillsDropdown = document.getElementById('skills-dropdown');

            const skillSuggestions = ['JavaScript', 'Python', 'Java', 'C++', 'HTML', 'CSS', 'React', 'Node.js']; // Example skills

            function addSkill(skill) {
                if (skill && !Array.from(skillsContainer.children).some(tag => tag.textContent === skill)) {
                    const skillTag = document.createElement('div');
                    skillTag.textContent = skill;
                    skillTag.className = 'skill-tag';
                    const removeSkill = document.createElement('span');
                    removeSkill.textContent = '×';
                    removeSkill.className = 'remove-skill';
                    removeSkill.onclick = () => {
                        skillsContainer.removeChild(skillTag);
                    };
                    skillTag.appendChild(removeSkill);
                    skillsContainer.appendChild(skillTag);
                    updateSkillsInput();
                }
            }

            function updateSkillsInput() {
                const skills = Array.from(skillsContainer.children).map(tag => tag.textContent.replace('×', '').trim());
                document.getElementById('skills').value = skills.join(',');
            }

            skillsInput.addEventListener('input', () => {
                const value = skillsInput.value.toLowerCase();
                skillsDropdown.innerHTML = '';
                if (value) {
                    const filteredSkills = skillSuggestions.filter(skill => skill.toLowerCase().includes(value));
                    filteredSkills.forEach(skill => {
                        const option = document.createElement('div');
                        option.textContent = skill;
                        option.onclick = () => {
                            addSkill(skill);
                            skillsInput.value = '';
                            skillsDropdown.style.display = 'none';
                        };
                        skillsDropdown.appendChild(option);
                    });
                    skillsDropdown.style.display = 'block';
                } else {
                    skillsDropdown.style.display = 'none';
                }
            });

            document.addEventListener('click', (e) => {
                if (!e.target.closest('.form-input-wrapper')) {
                    skillsDropdown.style.display = 'none';
                }
            });

            // Handle form submission errors
            document.querySelector('form').addEventListener('submit', (e) => {
                if (!document.querySelector('input[name="username"]').value || !document.querySelector('input[name="name"]').value) {
                    e.preventDefault();
                    errorMessageElement.textContent = 'All fields are required.';
                    errorMessageElement.classList.remove('hidden');
                }
            });
        });
    </script>
