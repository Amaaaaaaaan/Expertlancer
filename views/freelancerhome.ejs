    <script src="/socket.io/socket.io.js"></script>
    <script>const socket = io();
        const sendbtn = document.getElementById('sendButton');
        const messageInput = document.getElementById('message');
        const allmessages = document.getElementById('messages');

        // Handle incoming chat history
        socket.on('chatHistory', (messages) => {
            messages.forEach(data => {
                const p = document.createElement("div");
                p.classList.add("message", data.username === username ? "outgoing" : "incoming");
                p.innerHTML = `
          <span class="username">${data.username}:</span>
          <p>${data.text}</p>
        `;
                allmessages.appendChild(p);
            });
            allmessages.scrollTop = allmessages.scrollHeight; // Scroll to the bottom
        });

        // Handle incoming messages
        socket.on('message', (data) => {
            const p = document.createElement("div");
            p.classList.add("message", data.username === username ? "outgoing" : "incoming");
            p.innerHTML = `
        <span class="username">${data.username}:</span>
        <p>${data.text}</p>
      `;
            allmessages.appendChild(p);
            allmessages.scrollTop = allmessages.scrollHeight; // Scroll to the bottom
        });

        // Send a new message
        sendbtn.addEventListener("click", () => {
            const message = messageInput.value.trim();
            if (message) {
                // Emit the message with the actual username included
                socket.emit('newmessage', { text: message, username: username });
                messageInput.value = ""; // Clear input field
            }
        });

        // Send message on Enter key press
        messageInput.addEventListener("keypress", (e) => {
            if (e.key === "Enter") {
                sendbtn.click();
            }
        });
    </script>



