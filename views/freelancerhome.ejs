    <style>
        body::-webkit-scrollbar {
            width: 10px;
            /* Slightly wider for a more prominent look */
        }

        body::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #7e7e7e, #3e3e3e);
            /* Professional blue gradient */
            border-radius: 8px;
            /* Slightly rounded corners */
            border: 2px solid #f8f9fa;
            /* Light border to stand out */
        }

        body::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, #0056b3, #003d80);
            /* Darker blue on hover */
        }

        body::-webkit-scrollbar-track {
            background: #f1f3f5;
            /* Light gray track background for a clean look */
            border-radius: 8px;
        }

        #messages::-webkit-scrollbar {
            width: 8px;
        }

        #messages::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #4A90E2, #003366);
            border-radius: 10px;
            border: 2px solid white;
        }

        #messages::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, #357ABD, #001F4D);
        }

        #messages::-webkit-scrollbar-track {
            background: #f0f0f0;
            border-radius: 10px;
        }

        .feature-box img {
            width: 64px;
            height: 64px;
        }

        .feature-box h3 {
            font-size: 1.25rem;
            /* 20px */
        }

        .feature-box p {
            font-size: 0.875rem;
            /* 14px */
        }

        @media (max-width: 640px) {
            .feature-box h3 {
                font-size: 1rem;
                /* 16px */
            }

            .feature-box p {
                font-size: 0.75rem;
                /* 12px */
            }
        }

        /* Container for messages */
        #messages {
            display: flex;
            flex-direction: column;
            padding: 10px;
            overflow-y: auto;
            max-height: 400px;
        }

        .message {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 8px;
            max-width: 75%;
            word-wrap: break-word;
            display: flex;
            flex-direction: column;
            position: relative;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            animation: slideIn 0.3s ease-out;
            /* Add slide-in animation */
        }

        .message.incoming {
            background-color: #f1f1f1;
            align-self: flex-start;
            border-radius: 8px 8px 8px 0;
        }

        .message.outgoing {
            background-color: #007bff;
            color: #ffffff;
            align-self: flex-end;
            border-radius: 8px 8px 0 8px;
        }

        .message .content {
            display: flex;
            align-items: center;
        }

        .message .content p {
            margin: 0;
            line-height: 1.4;
            white-space: pre-wrap;
        }

        .message .username {
            margin-right: 10px;
            /* Space between username and message */
            font-weight: bold;
            font-size: 0.9em;
            color: #555;
            /* Gray color for username */
        }

        .message.outgoing .username {
            color: #ffffff;
            /* White color for outgoing username */
        }

        .message p {
            margin: 0;
            line-height: 1.4;
            white-space: pre-wrap;
        }

        .chat-image {
            max-width: 100%;
            border-radius: 8px;
            margin-top: 5px;
        }

        @media (max-width: 600px) {
            .message {
                max-width: 90%;
                padding: 8px;
            }
        }

        .message:not(:last-child) {
            margin-bottom: 12px;
        }

        #message {
            width: calc(100% - 80px);
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            margin-right: 10px;
        }

        #sendButton {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
            cursor: pointer;
            transition: background 0.3s;
        }

        #sendButton:hover {
            background: linear-gradient(45deg, #0056b3, #007bff);
        }

        /* Slide-in animation for new messages */
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>

