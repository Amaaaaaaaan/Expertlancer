<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insurance Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
    <link rel="stylesheet" href="style.css">
</head>

<body class="font-poppins bg-gray-100 text-gray-800 p-4">
    <header class="bg-white shadow-md py-4 px-6 mb-8">
        <div class="container mx-auto flex items-center justify-between">
            <!-- Logo (Left Side) -->
            <a class="text-2xl font-bold text-blue-600" href="/freelancerhome">ExpertLancer</a>

            <!-- Desktop Menu (Right Side) -->
            <nav class="hidden md:flex md:items-center md:gap-4">
                <a href="/freelancer-profile" class="text-blue-600 hover:text-blue-800 flex items-center gap-1" aria-label="Profile">
                    <i class="ri-user-line text-xl"></i>
                    <span>Profile</span>
                </a>
                <a href="/freelancerhome" class="text-blue-600 hover:text-blue-800 flex items-center gap-1" aria-label="Home">
                    <i class="ri-home-line text-xl"></i>
                    <span>Home</span>
                </a>
            </nav>

            <!-- Mobile Menu Button -->
            <button class="md:hidden text-blue-600 hover:text-blue-800" id="mobile-menu-button" aria-label="Toggle menu">
                <i class="ri-menu-line text-xl"></i>
            </button>
        </div>
    </header>

    <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-3xl font-semibold text-gray-800 mb-8 text-center">ExpertLancer Insurance Form</h1>
        <form>
            <!-- Personal Information -->
            <fieldset class="border border-gray-300 rounded-lg p-6 mb-6">
                <legend class="text-xl font-semibold text-blue-600 mb-4">Personal Information</legend>
                <div class="space-y-4">
                    <div>
                        <label for="fullname" class="block text-gray-700 text-sm font-medium mb-2">Full Name:</label>
                        <input type="text" id="fullname" name="fullname" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>

                    <div>
                        <label for="dob" class="block text-gray-700 text-sm font-medium mb-2">Date of Birth:</label>
                        <input type="date" id="dob" name="dob" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-2">Gender:</label>
                        <div class="flex gap-4">
                            <div class="flex items-center">
                                <input type="radio" id="male" name="gender" value="male" required class="mr-2">
                                <label for="male">Male</label>
                            </div>
                            <div class="flex items-center">
                                <input type="radio" id="female" name="gender" value="female" class="mr-2">
                                <label for="female">Female</label>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="phone" class="block text-gray-700 text-sm font-medium mb-2">Phone Number:</label>
                        <input type="tel" id="phone" name="phone" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>
                </div>
            </fieldset>

            <!-- Employment Information -->
            <fieldset class="border border-gray-300 rounded-lg p-6 mb-6">
                <legend class="text-xl font-semibold text-blue-600 mb-4">Employment Information</legend>
                <div class="space-y-4">
                    <div>
                        <label for="occupation" class="block text-gray-700 text-sm font-medium mb-2">Project I'd:</label>
                        <input type="text" id="occupation" name="occupation" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>

                    <div>
                        <label for="work_address" class="block text-gray-700 text-sm font-medium mb-2">Work Address:</label>
                        <input type="text" id="work_address" name="work_address" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>

                    <div>
                        <label for="email" class="block text-gray-700 text-sm font-medium mb-2">Email Address (Work):</label>
                        <input type="email" id="email" name="email" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>
                </div>
            </fieldset>

            <!-- Insurance Coverage Details -->
            <fieldset class="border border-gray-300 rounded-lg p-6 mb-6">
                <legend class="text-xl font-semibold text-blue-600 mb-4">Insurance Coverage Details</legend>
                <div class="space-y-4">
                    <div>
                        <label for="insurance_type" class="block text-gray-700 text-sm font-medium mb-2">Type of Insurance:</label>
                        <div class="flex gap-4">
                            <div class="flex items-center">
                                <input type="radio" id="term_life" name="insurance_type" value="term" required class="mr-2">
                                <label for="term_life">Individual Project</label>
                            </div>
                            <div class="flex items-center">
                                <input type="radio" id="whole_life" name="insurance_type" value="whole" class="mr-2">
                                <label for="whole_life">Section of project</label>
                            </div>
                            <div class="flex items-center">
                                <input type="radio" id="universal_life" name="insurance_type" value="universal" class="mr-2">
                                <label for="universal_life">All Projects</label>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="coverage_amount" class="block text-gray-700 text-sm font-medium mb-2">Project Value:</label>
                        <input type="number" id="coverage_amount" name="coverage_amount" required class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>

                    <div>
                        <label for="payment" class="block text-gray-700 text-sm font-medium mb-2">Premium Payment:</label>
                        <div class="flex gap-4">
                            <div class="flex items-center">
                                <input type="radio" id="monthly" name="payment" value="monthly" required class="mr-2">
                                <label for="monthly">One Time</label>
                            </div>
                            <div class="flex items-center">
                                <input type="radio" id="quarterly" name="payment" value="quarterly" class="mr-2">
                                <label for="quarterly">Monthly</label>
                            </div>
                            <div class="flex items-center">
                                <input type="radio" id="annually" name="payment" value="annually" class="mr-2">
                                <label for="annually">Annually</label>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="additional_riders" class="block text-gray-700 text-sm font-medium mb-2">Additional Costs (if any):</label>
                        <input type="text" id="additional_riders" name="additional_riders" class="w-full p-3 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                    </div>
                </div>
            </fieldset>

            <!-- Declaration -->
            <fieldset class="border border-gray-300 rounded-lg p-6 mb-6">
                <legend class="text-xl font-semibold text-blue-600 mb-4">Declaration</legend>
                <div class="flex items-center gap-2 mb-4">
                    <input type="checkbox" id="declaration" name="declaration" required class="mr-2">
                    <label for="declaration" class="text-gray-700 text-sm">I declare that the information provided above is correct to the best of my knowledge.</label>
                </div>
            </fieldset>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="bg-blue-600 text-white py-3 px-6 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Submit</button>
            </div>
        </form>
    </div>

    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="fixed top-0 right-0 w-64 bg-white shadow-md md:hidden hidden">
        <div class="flex justify-between p-4 border-b">
            <h2 class="text-xl font-bold text-blue-600">Menu</h2>
            <button id="close-menu" class="text-blue-600 hover:text-blue-800">
                <i class="ri-close-line text-xl"></i>
            </button>
        </div>
        <ul class="p-4 space-y-4">
            <li><a href="/freelancer-profile" class="text-blue-600 hover:text-blue-800 flex items-center gap-1" aria-label="Profile"><i class="ri-user-line text-xl"></i> Profile</a></li>
            <li><a href="/freelancerhome" class="text-blue-600 hover:text-blue-800 flex items-center gap-1" aria-label="Home"><i class="ri-home-line text-xl"></i> Home</a></li>
        </ul>
    </nav>

    <script>
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
        document.getElementById('close-menu').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.add('hidden');
        });
    </script>
    <!-- Footer -->
<footer class="bg-gray-900 text-gray-300 py-12">
