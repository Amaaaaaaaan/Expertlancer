<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assigned Projects</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f1f4f8;
        }
    </style>
</head>
<body>
    <!-- Navbar Header -->
    <header class="bg-white shadow-md py-4 px-6">
        <div class="container mx-auto flex items-center justify-between">
            <!-- Logo (Left Side) -->
            <a class="text-2xl font-bold text-blue-600 whitespace-nowrap" href="/freelancerhome">ExpertLancer</a>
    
            <!-- Desktop Menu (Right Side) -->
            <nav class="hidden md:flex md:items-center md:gap-4">
                <a href="/profile" class="text-blue-600 hover:text-blue-800 flex items-center gap-1" aria-label="Profile">
                    <i class="ri-user-line text-xl"></i>
                    <span>Profile</span>
                </a>
                <a href="/freelancerhome" class="text-blue-600 hover:text-blue-800 flex items-center gap-1" aria-label="Home">
                    <i class="ri-home-line text-xl"></i>
                    <span>Home</span>
                </a>
            </nav>

            <!-- Mobile Menu Button -->
            <button class="md:hidden text-blue-600 hover:text-blue-800" id="mobile-menu-button" aria-label="Toggle menu">
                <i class="ri-menu-line text-xl"></i>
            </button>
        </div>
    </header>
    
    <!-- Mobile Menu -->
    <div class="md:hidden fixed inset-0 bg-white shadow-md z-50 hidden" id="mobile-menu">
        <nav class="flex flex-col items-center p-4">
            <a href="/freelancer-profile" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 py-2" aria-label="Profile">
                <i class="ri-user-line text-xl"></i>
                <span>Profile</span>
            </a>
            <a href="/freelancerhome" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 py-2" aria-label="Home">
                <i class="ri-home-line text-xl"></i>
                <span>Home</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
       

       <!-- Projects Section -->
<section class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Assigned Projects to you</h2>
    <div id="projects-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% projects.forEach(project => { %>
            <% if (project.assignedTo) { %>
                <div class="bg-gray-100 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= project.title %></h3>
                    <p class="text-gray-700 mb-2">Assigned To: <%= project.assignedTo %></p>
                    <p class="text-gray-700 mb-2">Assigned By: <%= project.user ? project.user.name : 'Unknown' %></p>
                    <p class="text-gray-600 mb-4">Category: <%= project.category %></p>
                    <div class="text-center mt-4">
                        <a href="/project/<%= project._id %>" class="text-blue-500 hover:text-blue-700 text-sm font-medium flex items-center justify-center">
                            <i class="ri-eye-line mr-1 text-blue-500"></i> View Details
                        </a>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </div>
</section>

    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 py-12">
        <div class="container mx-auto px-6">
            <!-- Company Info Section -->
            <div class="mb-12">
                <div class="flex flex-col md:flex-row justify-between items-start space-y-8 md:space-y-0">
                    <!-- Company Description -->
                    <div class="w-full md:w-1/3">
                        <h5 class="text-3xl font-bold mb-4 text-white">ExpertLancer</h5>
                        <p class="mb-4 text-gray-400 leading-relaxed">
                            ExpertLancer connects top-tier freelancers with innovative companies. Our platform offers a
                            seamless experience to find and manage freelance projects, enhancing productivity and
                            creating opportunities for talent worldwide.
                        </p>
                        <div class="flex space-x-4">
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                                aria-label="Facebook">
                                <i class="ri-facebook-line text-2xl"></i>
                            </a>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                                aria-label="Twitter">
                                <i class="ri-twitter-line text-2xl"></i>
                            </a>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                                aria-label="LinkedIn">
                                <i class="ri-linkedin-line text-2xl"></i>
                            </a>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                                aria-label="Instagram">
                                <i class="ri-instagram-line text-2xl"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Contact Information -->
                    <div class="w-full md:w-1/3">
                        <h5 class="text-lg font-semibold mb-4 text-white">Contact Us</h5>
                        <ul class="space-y-2">
                            <li class="text-gray-400">
                                <i class="ri-mail-line mr-2"></i>
                                <a href="mailto:info@expertlancer.com" class="hover:text-white">info@expertlancer.com</a>
                            </li>
                            <li class="text-gray-400">
                                <i class="ri-phone-line mr-2"></i>
                                <a href="tel:+123456789" class="hover:text-white">+1 (234) 567-89</a>
                            </li>
                            <li class="text-gray-400">
                                <i class="ri-map-pin-line mr-2"></i>
                                123 Suite 456, City, Country
                            </li>
                        </ul>
                    </div>
                    <!-- Newsletter Signup -->
                    <div class="w-full md:w-1/3">
                        <h5 class="text-lg font-semibold mb-4 text-white">Stay Updated</h5>
                        <p class="mb-4 text-gray-400">Subscribe to our newsletter for the latest updates, job
                            opportunities, and tips on maximizing your freelance career.</p>
                        <form action="#" method="post" class="flex flex-col space-y-4">
                            <input type="email" placeholder="Enter your email"
                                class="p-3 rounded-md border border-gray-700 bg-gray-800 text-gray-300 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                required>
                            <button type="submit"
                                class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md font-semibold transition-colors duration-300">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="text-center text-gray-400">
                <p>&copy; 2024 ExpertLancer. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Toggle mobile menu visibility
        document.getElementById('mobile-menu-button').addEventListener('click', function () {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
    </script>
</body>
</html>
