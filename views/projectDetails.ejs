<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details - ExpertLancer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f1f4f8;
        }

        iframe.pdf-viewer {
            width: 100%;
            height: 500px;
            border: none;
        }

        .apply-button {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .apply-button:hover {
            background-color: #2b6cb0;
            /* Darker shade of blue for hover effect */
            transform: scale(1.05);
            /* Slightly enlarge button on hover */
        }
    </style>
</head>

<body class="min-h-screen flex flex-col bg-gray-100">
    <!-- Navbar Header -->
    <header class="bg-white shadow-md py-4 px-6">
        <div class="container mx-auto flex items-center justify-between">
            <!-- Logo -->
            <a class="flex items-center space-x-2 text-2xl font-bold text-blue-600" href="/">
                <span>ExpertLancer</span>
            </a>
            <!-- Desktop Menu -->
            <nav class="hidden md:flex md:items-center md:gap-4">
                <a href="/profile" class="text-blue-600 hover:text-blue-800 flex items-center gap-1"
                    aria-label="Profile">
                    <i class="ri-user-line text-xl"></i>
                    <span>Profile</span>
                </a>
                <a href="/freelancerhome" class="text-blue-600 hover:text-blue-800 flex items-center gap-1"
                    aria-label="Home">
                    <i class="ri-home-line text-xl"></i>
                    <span>Home</span>
                </a>
            </nav>
            <!-- Mobile Menu Button -->
            <button class="md:hidden text-blue-600 hover:text-blue-800" id="mobile-menu-button"
                aria-label="Toggle menu">
                <i class="ri-menu-line text-xl"></i>
            </button>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div class="md:hidden fixed inset-0 bg-white shadow-md z-50 hidden" id="mobile-menu">
        <nav class="flex flex-col items-center p-4">
            <a href="/profile" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 py-2"
                aria-label="Profile">
                <i class="ri-user-line text-xl"></i>
                <span>Profile</span>
            </a>
            <a href="/freelancerhome" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 py-2"
                aria-label="Home">
                <i class="ri-home-line text-xl"></i>
                <span>Home</span>
            </a>
        </nav>
    </div>

    <!-- Project Details -->
    <main class="flex-grow container mx-auto px-4 py-8">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-2xl mx-auto">
           <!-- Apply Button -->
<div class="mb-6 text-center">
    <a href="mailto:<%= project.user.email %>?subject=Application for Project <%= project.title %>&body=I would like to apply for the project titled '<%= project.title %>'. Please find my details below."
       class="bg-blue-600 text-white py-3 px-6 rounded-lg shadow-lg hover:bg-blue-700 transition apply-button">
      Apply for this Project
    </a>
  </div>
  
            <h1 class="text-3xl font-bold mb-6 text-gray-900">
                <%= project.title %>
            </h1>
            
            <div class="space-y-4">
                <p class="text-gray-700"><span class="font-semibold">Posted by:</span>
                    <%= project.user ? project.user.username : 'Unknown' %>
                </p>
                <p class="text-gray-600"><span class="font-semibold">Category:</span>
                    <%= project.category %>
                </p>
                <p class="text-gray-800"><span class="font-semibold">Description:</span>
                    <%= project.description %>
                </p>
                <p class="text-gray-800"><span class="font-semibold">Assigned To:</span> <%= project.assignedTo ? project.assignedTo : 'Not Assigned' %></p>

                <!-- Project PDF -->
                <% if (project.pdf) { %>
                    <div class="mb-6">
                        <h2 class="text-xl font-semibold mb-2 text-gray-800">Project PDF</h2>
                        <iframe class="pdf-viewer" src="data:application/pdf;base64,<%= project.pdf %>"></iframe>
                    </div>
                    <% } else { %>
                        <p class="text-center text-gray-600">No PDF available for this project.</p>
                        <% } %>
            </div>
            <!-- Back to Projects Button -->
            <div class="mt-6 text-center">
                <a href="/projectdisplay"
                    class="bg-blue-600 text-white py-3 px-6 rounded-lg shadow-lg hover:bg-blue-700 transition">Back to
                    Projects</a>
            </div>
        </div>
    </main>

    <!-- Footer -->
<footer class="bg-gray-900 text-gray-300 py-12">
    <div class="container mx-auto px-6">

        <!-- Company Info Section -->
        <div class="mb-12">
            <div class="flex flex-col md:flex-row justify-between items-start space-y-8 md:space-y-0">
                <!-- Company Description -->
                <div class="w-full md:w-1/3">
                    <h5 class="text-3xl font-bold mb-4 text-white">ExpertLancer</h5>
                    <p class="mb-4 text-gray-400 leading-relaxed">
                        ExpertLancer connects top-tier freelancers with innovative companies. Our platform offers a
                        seamless experience to find and manage freelance projects, enhancing productivity and
                        creating opportunities for talent worldwide.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                            aria-label="Facebook">
                            <i class="ri-facebook-line text-2xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                            aria-label="Twitter">
                            <i class="ri-twitter-line text-2xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                            aria-label="LinkedIn">
                            <i class="ri-linkedin-line text-2xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300"
                            aria-label="Instagram">
                            <i class="ri-instagram-line text-2xl"></i>
                        </a>
                    </div>
                </div>
                <!-- Contact Information -->
                <div class="w-full md:w-1/3">
                    <h5 class="text-lg font-semibold mb-4 text-white">Contact Us</h5>
                    <ul class="space-y-2">
                        <li class="text-gray-400">
                            <i class="ri-mail-line mr-2"></i>
                            <a href="mailto:info@expertlancer.com" class="hover:text-white">info@expertlancer.com</a>
                        </li>
                        <li class="text-gray-400">
                            <i class="ri-phone-line mr-2"></i>
                            <a href="tel:+123456789" class="hover:text-white">+1 (234) 567-89</a>
                        </li>
                        <li class="text-gray-400">
                            <i class="ri-map-pin-line mr-2"></i>
                            123 Suite 456, City, Country
                        </li>
                    </ul>
                </div>
                <!-- Newsletter Signup -->
                <div class="w-full md:w-1/3">
                    <h5 class="text-lg font-semibold mb-4 text-white">Stay Updated</h5>
                    <p class="mb-4 text-gray-400">Subscribe to our newsletter for the latest updates, job
                        opportunities, and tips on maximizing your freelance career.</p>
                    <form action="#" method="post" class="flex flex-col space-y-4">
                        <input type="email" placeholder="Enter your email"
                            class="p-3 rounded-md border border-gray-700 bg-gray-800 text-gray-300 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required>
                        <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md font-semibold transition-colors duration-300">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Additional Sections -->
        <div class="flex flex-col md:flex-row justify-between mb-12">
            <!-- Quick Links Section -->
            <div class="w-full md:w-1/4 mb-6 md:mb-0">
                <h5 class="text-lg font-semibold mb-4 text-white">Quick Links</h5>
                <ul class="space-y-2">
                    <li><a href="/" class="text-gray-400 hover:text-white">Home</a></li>
                    <li><a href="/login-freelancer" class="text-gray-400 hover:text-white">Find Work</a></li>
                    <li><a href="/login-user" class="text-gray-400 hover:text-white">Find Freelancers</a></li>
                    <li><a href="/login-user" class="text-gray-400 hover:text-white">Log In</a></li>
                    <li><a href="/register-user" class="text-gray-400 hover:text-white">Sign Up</a></li>
                </ul>
            </div>
            <!-- Resources Section -->
            <div class="w-full md:w-1/4 mb-6 md:mb-0">
                <h5 class="text-lg font-semibold mb-4 text-white">Resources</h5>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-white">Help Center</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Blog</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Community</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">API Documentation</a></li>
                </ul>
            </div>
            <!-- Legal Section -->
            <div class="w-full md:w-1/4 mb-6 md:mb-0">
                <h5 class="text-lg font-semibold mb-4 text-white">Legal</h5>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-white">Privacy Policy</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Terms of Service</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Cookie Policy</a></li>
                </ul>
            </div>
            <!-- Features Section -->
            <div class="w-full md:w-1/4">
                <h5 class="text-lg font-semibold mb-4 text-white">Features</h5>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-white">Advanced Search</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Project Management</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Secure Payments</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">24/7 Support</a></li>
                </ul>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="text-center border-t border-gray-700 pt-6">
            <p class="text-gray-500">&copy; 2024 ExpertLancer. All rights reserved.</p>
        </div>
    </div>
</footer>


    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        });
    </script>
    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"
        integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO"
        crossorigin="anonymous"></script>
</body>

</html>